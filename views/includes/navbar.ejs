<!-- Import main CSS file -->
<link rel="stylesheet" href="/css/style.css">

<!-- Import Google Material Icons -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

<!-- ================== HEADER ================== -->
<header class="navbar-container">

    <!-- Logo and brand name -->
    <div class="navbar-logo">
        <img src="../../photos/logo.png" alt="logo">
        <h4>TripNest</h4>
    </div>

    <!-- Middle container: Home/New buttons + Search bar -->
    <div class="mid-container">

        <!-- Home and New listing buttons -->
        <div class="home-and-new-btn">
            <form method="get" action="/listings">
                <button>Home</button>
            </form>
            <form method="get" action="/listings/new">
                <button>New</button>
            </form>
        </div>

        <!-- Search bar -->
        <div class="search-bar">
            <input placeholder="search destinations" name="search" type="text">
            <button class="search-btn">
                <span class="material-symbols-outlined">search</span>
            </button>
        </div>

    </div>

    <!-- User account dropdown (for login/logout/signup) -->
    <div class="user-container">
        
        <!-- Dropdown trigger icon -->
        <div class="user-dropdown-logo">
            <span class="material-symbols-outlined">person</span>
        </div>

        <!-- Dropdown menu content -->
        <div class="user-dropdown-menu">
            <% if (!currentUser) { %>
                <!-- Show when user is not logged in -->
                <a href="/signup">Sign up</a>
                <a href="/login">Log in</a>
            <% } %>
            <% if (currentUser) { %>
                <!-- Show when user is logged in -->
                <a href="/logout">Log out</a>
            <% } %>
            <!-- Visual divider line -->
            <div class="divider"></div>
        </div>

    </div>

</header>

<!-- JS to handle dropdown toggle functionality -->
<script src="/js/dropdown.js"></script>
